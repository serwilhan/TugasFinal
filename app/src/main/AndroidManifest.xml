<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.serwilhan.tugasfinal">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name=".application.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TugasFinal">
        <activity
            android:name="com.serwilhan.tugasfinal.ui.activities.RingActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity android:name="com.serwilhan.tugasfinal.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.serwilhan.tugasfinal.broadcastreceivers.AlarmReceiver"/>

        <service android:name="com.serwilhan.tugasfinal.services.AlarmService" />
    </application>

</manifest>